<div class="container">
    <%= form_for @meal do |f| %>

    <%= f.hidden_field :chart_id, value: @meal.chart.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.label :meal_name %>
    <%= f.text_field :meal_name %>
    <br>
    <br>
    <%= f.label :meal_type %>
    <%= f.select(:meal_type, options_for_select([['Breakfast', 'Breakfast'],['Lunch', 'Lunch'],['Dinner', 'Dinner']])) %>
    <br>
    <br>
    <%= f.label :note %>
    <%= f.text_area :note %>
    <br>
    <br>
    <%= f.submit %>
    <% end %>
</div>