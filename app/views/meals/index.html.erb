<div class="container">

<% if @chart %>
<h3>Here is <%= @chart.date.strftime("%A") %>'s menu</h3>
  <table class="table table-hover">
    <thead>
    <tr class="table-danger">
        <th>Meal type</th>
        <th>Name</th>
        <th>Note</th>
        <th>Edit</th>
        <th>Remove</th>
    </tr>
    </thead>
    <tbody>
    <% @meals.each do |meal| %>
      <tr class="table-info">
            <td><%= meal.meal_type %></td>
            <td><%= meal.meal_name %></td>
            <td><%= meal.note %></td>
            <td><%= link_to 'Edit', edit_meal_path(meal)%></td>
            <td><%= link_to 'X',meal_path(meal), method: :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>
    <%= link_to 'Create Another Meal', new_chart_meal_path(@chart), class:"btn btn-secondary" %> <br>
    <br>
<%else%>
   <table class="table table-hover">
    <thead>
    <tr class="table-danger">       
        <th>Meal type</th>
        <th>Name</th>
        <th>Note</th>
    </tr>
    </thead>
    <tbody>

    <% @meals.each do |meal| %>
      <tr class="table-info">
            <td><%= meal.meal_type %></td>
            <td><%= meal.meal_name %></td>
            <td><%= meal.note %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<%end%>
<br>
</div>
